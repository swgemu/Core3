	public void setFollowShipObject(ShipObject ship) {
		synchronized (targetMutex) {
			if (this.isRetreating())
				return;

			if (ship != null && followShip != ship) {
				setMovementState(FOLLOWING);

				followShip = ship;
			}
		}
	}

	public void setTargetShipObject(ShipObject ship) {
		synchronized (targetMutex) {
			if (targetShip != ship) {
				targetShip = ship;
			}
		}
	}

