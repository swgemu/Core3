package server.zone.objects.region;

import system.util.VectorMap;
import engine.core.ManagedObject;
import server.zone.objects.tangible.terminal.Terminal;
import server.zone.objects.tangible.terminal.vendor.bazaar.BazaarTerminal;
import server.zone.objects.area.ActiveArea;
import server.zone.objects.creature.CreatureObject;
import server.zone.objects.building.city.CityHallObject;
import server.zone.objects.creature.CreatureObject;
include server.zone.objects.scene.variables.StringId;
include server.zone.objects.region.RegionCenterPoint;
include server.zone.objects.region.RegionCenterPointList;
import server.zone.Zone;
import server.zone.objects.scene.SceneObject;

class Region extends ActiveArea {	
	@dereferenced
	protected VectorMap<unsigned long, BazaarTerminal> bazaars;
	
	@dereferenced
	protected SortedVector<SceneObject> shuttlePorts;
	
//	@weakReference
	protected CityHallObject cityHall;
	
	public Region() {
		super();
		
		bazaars.setNoDuplicateInsertPlan();
		bazaars.setNullValue(null);
	}
	
	public void notifyEnter(SceneObject object) {
		if (object.isTerminal()) {
			Terminal term = (Terminal) object;
			if (term.isBazaarTerminal())
				bazaars.put(object.getObjectID(), (BazaarTerminal)object);
		}
		
		if (object.isPlayerCreature()) {
			sendGreetingMessage((CreatureObject) object);
		}
		
		//object planetmapcat is shuttleport, then add to shuttleports vector.
		//otherwise, die
	}
	
	public native void sendGreetingMessage(CreatureObject player);
	public native void sendDepartingMessage(CreatureObject player);
	
	public void notifyExit(SceneObject object) {
		if (object.isTerminal()) {
			Terminal term = (Terminal) object;
			if (term.isBazaarTerminal())
				bazaars.drop(object.getObjectID());

		}
		
		if (object.isPlayerCreature()) {
			sendDepartingMessage((CreatureObject) object);
		}
	}
	
	/**
	 * Inserts this object into zone
	 * @pre { this object is locked }
	 * @post { this object is locked and inserted into zone }
	 * @param zone Zone object where this object will be inserted
	 */
	public native void notifyInsertToZone(Zone zone);
	
	public void notifyRemoveFromZone() {
		despawnCityObjects();
			
		super.notifyRemoveFromZone();
		
		updateToDatabaseWithoutChildren();
	}
	
	public native void despawnCityObjects();

	public void addBazaar(BazaarTerminal ter) {
		bazaars.put(ter.getObjectID(), ter);
	}

	public BazaarTerminal getBazaar(int idx) {
		return bazaars.get(idx);
	}

	public int getBazaarCount() {
		return bazaars.size();
	}
	
	public boolean isRegion() {
		return true;
	}
	
	public CityHallObject getCityHall() {
		return cityHall;
	}
	
	public void setCityHall(CityHallObject hall) {
		cityHall = hall;
	}
}

